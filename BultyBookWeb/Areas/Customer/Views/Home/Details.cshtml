@model ShoppingCart

<form method="post">
    <input hidden asp-for="ProductId" />
        <div class="card container">
            <div class="card-header bg-primary text-light ml-0 row">
                <div class="col-12 col-md-6 text-center row align-align-items-center">
                    <h1 class="text-white-50">@Model.Product.Name</h1>
                    <p class="text-warning mb-0">@Model.Product.Author</p>
                </div>
                <div class="col-12 col-md-6 text-center row align-items-center justify-content-between">
                    <div class="col-6">
                        <span class="badge bg-info">@Model.Product.CoverType.Name</span>
                    </div>
                    <div class="col-6">
                        <span class="badge bg-warning";">@Model.Product.Category.Name</span>
                    </div>
                </div>
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">
                            <div class="row pl-2">
                                <h5 class="text-muted">ISBN : @Model.Product.ISBN</h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2">List Price: <strike>@Model.Product.ListPrice.ToString("c")</strike></h5>
                            </div>
                            <div class="row text-center pl-2">
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>Quantity</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>1-50</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>51-100</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>100+</div>
                                </div>
                            </div>
                            <div class="row text-center pl-2" style="color:maroon; font-weight:bold">
                                <div class="p-1 col-2 bg-secondary">
                                    <div>Price</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary">
                                    <div>@Model.Product.Price.ToString("c")</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary">
                                    <div>@Model.Product.Price50.ToString("c")</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary">
                                    <div>@Model.Product.Price100.ToString("c")</div>
                                </div>
                            </div>
                            <div class="row pl-2">
                                <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                            </div>
                            <div class="row pl-2 align-items-center">
                                <div class="col-auto text-primary m-1">
                                    <h4 class="m-0">Count</h4>
                                </div>
                                <div class="col-auto">
                                    <input asp-for="Count" type="number" class="form-control text-center"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <img src="@Model.Product.ImageUrl" class="rounded" style="max-width:100%"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a asp-action="Index" class="btn btn-success form-control" >Back to List</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-primary form-control">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
</form>
